.page {
  display: flex;
  flex-direction: column;
  background: transparent;
}

.heroWrap {
  padding: 0;
  margin: 0;
  display: flex;
  justify-content: center;
  position: relative;
}

.heroSubtleGlow {
  position: relative;
}

.heroSubtleGlow::after {
  content: "";
  position: absolute;
  left: 50%;
  bottom: -48px;
  /* pulled up */
  transform: translateX(-50%);
  width: min(90%, var(--sc-hero-max-width));
  height: 140px;
  /* reduced */
  background: var(--sc-subtle-glow);
  filter: blur(32px);
  pointer-events: none;
  z-index: -1;
}

.contextSection {
  width: 100%;
  margin: clamp(32px, 5vw, 64px) auto 0;
  padding: 0;
}

.contextIntro {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  gap: clamp(var(--sc-space-2), 2vw, var(--sc-space-3));
  max-width: 900px;
  margin: 0 auto clamp(var(--sc-space-5), 4vw, var(--sc-space-6));
}

.contextEyebrow {
  font-size: var(--font-xs);
  letter-spacing: var(--tracking-meta);
  text-transform: uppercase;
  color: var(--sc-text-subtle, rgba(255, 255, 255, 0.7));
  font-weight: 640;
}

.contextTitle {
  font-size: clamp(1.6rem, 3.2vw, 2.5rem);
  font-weight: 680;
  letter-spacing: var(--tracking-h1-h2);
  line-height: 1.18;
  color: var(--sc-text-strong);
  margin: 0;
}

.contextSubtitle {
  font-size: var(--font-md);
  line-height: 1.5;
  letter-spacing: var(--tracking-body);
  color: var(--sc-text-body);
  margin: 0;
  opacity: 0.9;
  max-width: 760px;
}

.contextGrid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
  gap: clamp(18px, 3vw, 32px);
  width: 100%;
}

.contextCard {
  background: var(--sc-surface-1);
  border: 1px solid var(--sc-border-soft);
  border-radius: var(--sc-card-radius);
  padding: clamp(20px, 3vw, 26px);
  box-shadow: var(--sc-shadow-soft);
  display: flex;
  flex-direction: column;
  gap: var(--sc-space-2);
  min-height: 100%;
  transition: var(--sc-card-transition);
}

.contextCard h3 {
  margin: 0;
  font-size: var(--font-md);
  font-weight: 640;
  letter-spacing: var(--tracking-card-title);
  color: var(--sc-text-strong);
}

.contextCard p {
  margin: 0;
  color: var(--sc-text-body);
  line-height: 1.48;
  letter-spacing: var(--tracking-body);
  opacity: 0.92;
}

.contextCard:hover,
.contextCard:focus-within {
  border-color: var(--sc-border-strong);
  transform: translateZ(0) translateY(-2px);
  box-shadow: var(--sc-shadow-soft);
}

.dpGrid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
  gap: clamp(24px, 3vw, 32px);
  margin-top: clamp(var(--sc-space-4), 4vw, var(--sc-space-6));
  justify-content: center;
  width: 100%;
  align-items: stretch;
  grid-auto-rows: minmax(118px, auto);
}

.scCardSm {
  composes: scCardHighlight from '../styles/sc-architecture.css';
  background: var(--sc-surface-1);
  border: 1px solid var(--sc-border-soft);
  padding: clamp(18px, 2.8vw, 22px);
  border-radius: var(--sc-card-radius);
  width: 100%;
  max-width: 380px;
  display: flex;
  flex-direction: column;
  gap: 8px;
  min-height: 118px;
  justify-content: space-between;
  margin: 0 auto clamp(32px, 4vw, 48px);
  box-shadow: var(--sc-shadow-soft);
  transition: var(--sc-card-transition);
  will-change: transform, box-shadow;
}

.scCardSm:hover,
.scCardSm:focus-within {
  border-color: var(--sc-border-strong);
  background: var(--sc-surface-2);
  transform: translateZ(0) translateY(-2px);
  box-shadow: var(--sc-shadow-soft);
}

:global(html[data-theme='light']) .scCardSm {
  background: var(--sc-surface-1);
  border-color: var(--sc-border-soft);
  box-shadow: var(--sc-shadow-soft);
}

:global(html[data-theme='light']) .scCardSm:hover,
:global(html[data-theme='light']) .scCardSm:focus-within {
  border-color: var(--sc-border-strong);
  background: var(--sc-surface-2);
}

.scCardSmTitle {
  font-size: clamp(0.96rem, 1.15vw, 1rem);
  font-weight: 640;
  line-height: 1.28;
  letter-spacing: var(--tracking-card-title);
  color: var(--sc-text-strong);
  margin: 0 0 2px;
}

.scCardSmBody {
  font-size: clamp(0.86rem, 1.05vw, 0.9rem);
  font-weight: var(--weight-card-body);
  color: var(--sc-text-body);
  line-height: 1.48;
  letter-spacing: var(--tracking-body);
  opacity: 0.88;
}

.coreOpsDesc {
  font-size: var(--font-sm);
  text-align: center;
  max-width: 700px;
  margin: clamp(20px, 2vw, 28px) auto clamp(28px, 3vw, 36px);
  opacity: 0.82;
  letter-spacing: var(--tracking-body);
}

.coreOpsActions {
  margin-top: clamp(var(--sc-space-5), 5vw, var(--sc-space-7));
  display: flex;
  justify-content: center;
}

.coreOpsCard {
  background: var(--sc-surface-card);
  border: 1px solid var(--sc-border-card);
  border-radius: var(--sc-radius-card-xl, 18px);
  padding: clamp(22px, 4vw, 28px) clamp(24px, 5vw, 32px);
  box-shadow: var(--sc-shadow-soft);
  transition: transform var(--motion-hover), box-shadow var(--motion-hover), background var(--motion-hover);
  max-width: 520px;
  margin: 0 auto clamp(32px, 4vw, 48px);
  transform: translateZ(0);
}

.coreOpsCard:hover,
.coreOpsCard:focus-within {
  background: var(--sc-surface-card-strong);
  transform: translateZ(0) translateY(-2px) scale(1.003);
  box-shadow: var(--sc-shadow-soft);
}

.scButtonSecondary {
  width: 100%;
  justify-content: center;
}

.footer {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: clamp(var(--sc-space-4), 3vw, var(--sc-space-5));
  color: var(--sc-text-subtle);
  text-align: center;
  opacity: 0.88;
  font-size: var(--font-xs);
  letter-spacing: var(--tracking-body);
  max-width: 640px;
  margin: clamp(48px, 6vw, 72px) auto 0;
}

.footer a {
  opacity: 0.82;
  font-weight: 540;
  letter-spacing: var(--tracking-button);
  transition: opacity 160ms ease;
}

.footer a:hover {
  opacity: 1;
}

.footerCta {
  margin-bottom: var(--sc-space-6);
  align-self: center;
}

:global(main > .scSection:first-of-type) {
  margin-top: clamp(64px, 7vw, 80px);
}

/* replaced by R-A61 */
.heroUnderFade,
.heroTransition {
  width: 100%;
  height: 72px;
  margin-top: -36px;
  pointer-events: none;
  background: linear-gradient(to bottom, transparent, rgba(0, 0, 0, 0.18), transparent 90%);
}
