:root {
    --motion-curve-snappy: cubic-bezier(0.22, 0.61, 0.36, 1);
    --motion-fade: 180ms var(--motion-curve-snappy);
    --motion-slide: 150ms var(--motion-curve-snappy);
    --motion-hover: 140ms var(--motion-curve-snappy);
}

.scCardSm,
.coreOpsCard,
.principlesCard,
.usageBlockEmbedded,
.archNarrative,
.servicesCard,
.scArchDetailCard,
.scArchPrinciples,
.implBlock {
    transform-origin: center top;
    will-change: transform;
    transform: translateZ(0);
}

.scFadeIn {
    animation: scFadeIn var(--motion-fade) forwards;
}

@keyframes scFadeIn {
    from {
        opacity: 0;
        transform: translateY(8px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }
}
